                description: <Text style={{ wordBreak: 'break-word' }}>{entry.MessageText}</Text>,
                user: entry.PerformerID,
                id: index
              };
              <%={{ }}=%>     {{! revert delimiters for mustache }}
            })
          );
        } else {
          setHistory([]);
        }
      })
      .catch(() => {
        setHistory([]);
        setIsLoading(false);
      });
  }, [caseID, context]);
  return (
    <Styled{{COMPONENT_CLASS_NAME}}Wrapper>
    <Table
      title={pConn.getLocalizedValue(label, '', '')}
      columns={columns}
      data={history}
      loading={isLoading}
      loadingMessage={pConn.getLocalizedValue('Loading case history', '', '')}
    />
    </Styled{{COMPONENT_CLASS_NAME}}Wrapper>
  );

}


