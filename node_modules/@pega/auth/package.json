{
  "name": "@pega/auth",
  "version": "0.1.6",
  "description": "Pega OAuth 2.0 Client Library (supports Infinity and Launchpad).",
  "repository": {
    "type": "git",
    "url": "ssh://git@git.pega.io:7999/ps/pega-auth.git"
  },
  "license": "Apache-2.0",
  "type": "module",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "npx tsc -b",
    "postbuild": "cp src/oauth-client/authDone.html lib/oauth-client/ && cp src/oauth-client/lock-closed-solid.svg lib/oauth-client",
    "lint": "run-p -cl lint:*",
    "fix": "run-s -cl fix:*",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "clean": "run-p -cl clean:*",
    "clean:cache": "rimraf node_modules/.cache",
    "clean:build": "tsc -b --clean && rimraf lib",
    "lint:types": "tsc --noEmit --tsBuildInfoFile node_modules/.cache/typescript/tsconfig.tsbuildinfo",
    "lint:es": "eslint --color --cache --cache-location node_modules/.cache/eslint/ .",
    "lint:format": "prettier --color --loglevel warn -c .",
    "lint:spelling": "cspell --color \"./**/*.@(ts|mts|cts|tsx|js|mjs|cjs|jsx|md|json|html)\" \"./@(*|.*)\" \".vscode/**\"",
    "lint:pkg": "sort-package-json --check package.json packages/*/package.json",
    "fix:es": "eslint --color --fix --cache --cache-location=node_modules/.cache/eslint/ .",
    "fix:format": "prettier --color --loglevel warn -w .",
    "fix:pkg": "sort-package-json package.json packages/*/package.json"
  },
  "dependencies": {
    "node-fetch": "^3.2.10",
    "open": "^8.4.2"
  },
  "devDependencies": {
    "@pega/configs": "0.7.1",
    "@vitest/coverage-v8": "^0.34.6",
    "cspell": "^8.0.0",
    "eslint": "^8.53.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "jest": "^29.7.0",
    "jsdom": "^22.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "2.8.8",
    "rimraf": "^5.0.5",
    "sort-package-json": "^2.6.0",
    "typescript": "~5.2.2",
    "vitest": "^0.34.6"
  }
}
